<?xml version='1.0' encoding='utf-8'?>
<widget id="com.intropy.games.codehort" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Codehort</name>
    <name short="HiCdv">Codehort</name>
    <description>
        A Distributed eXtreme Programing Tool
    </description>
    <author email="evilisa@gmail.com" href="mailto:evilisa@gmail.com">
        Lisa Walkosz-Migliacio
    </author>
    <content src="codehort.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Fullscreen" value="false" />
    <preference name="WebViewBounce" value="true" />
    <preference name="BackgroundColor" value="0xdddddd" />
    <preference name="WindowSize" value="1280x768" />
    <preference name="OSXLocalStoragePath" value="~/.codehort/database" />
    <preference name="EnableWebGL" value="true" />
    <preference name="windows-target-version" value="10.0" />
    <engine name="osx" spec="^4.0.2" />
    <engine name="browser" spec="^5.0.4" />
    <engine name="macos" spec="^4.0.2" />
    <engine name="windows" spec="^6.0.1" />
</widget>
